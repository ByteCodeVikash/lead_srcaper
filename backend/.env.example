# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./scraper.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/rankrise_scraper

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Scraping Configuration
SCRAPING_RATE_LIMIT=2.0
SCRAPING_CONCURRENCY=5
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/121.0.0.0 Safari/537.36

# Proxy Configuration (optional)
# HTTP_PROXY=http://proxy:8080
# HTTPS_PROXY=http://proxy:8080
# SOCKS_PROXY=socks5://proxy:1080

# Feature Flags
RESPECT_ROBOTS_TXT=true
ENABLE_OCR=false
ENABLE_PLAYWRIGHT=true
ENABLE_GOOGLE_MAPS=true
ENABLE_LINKEDIN=true
ENABLE_DIRECTORIES=true

# Crawling Limits
MAX_PAGES_PER_DOMAIN=10
MAX_DEPTH=2

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
ENV=development
DEBUG=true
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Export Directory
EXPORT_DIR=./exports
